  >  /mnt/Timina/lmorales/javelar/Introgression_origin_perBlock_3_Oct2024/paired_distances_sapa_$gen.csv
  while IFS= read -r strain1; do
  # Almacenar la posición actual en el archivo de cepas
    current_pos=$(grep -n "^$strain1$" /mnt/Timina/lmorales/javelar/Introgression_origin_perBlock_3_Oct2024/cepas_$gen.txt | cut -d: -f1)
    echo $current_pos
    # Leer las cepas restantes en el archivo de cepas
